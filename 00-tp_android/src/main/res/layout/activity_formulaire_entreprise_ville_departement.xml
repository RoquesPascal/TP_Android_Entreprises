<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/TextViewlabelRecherche"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:text="@string/RechercherUneEntrepriseParVilleOuDepartement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"/>
    <ImageButton
        android:id="@+id/buttonQuery"
        android:layout_below="@id/TextViewlabelRecherche"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:src="@android:drawable/ic_menu_search"/>

    <EditText
        android:id="@+id/editQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextViewlabelRecherche"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:layout_toStartOf="@id/editQueryCPVille"
        android:inputType="text" />

    <EditText
        android:id="@+id/editQueryCPVille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextViewlabelRecherche"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:layout_toStartOf="@id/buttonQuery"
        android:inputType="text" />
    <ListView
        android:id="@+id/listLocations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/editQuery" />
    <ProgressBar
        android:id="@+id/queryProgressBar"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>